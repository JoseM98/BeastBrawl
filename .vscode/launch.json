    "version": "0.2.0",
    "configurations": [

        {
            "name": "Beast Brawl",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/Beast_Brawl",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "LD_LIBRARY_PATH",
                    "value": "./lib/linux/irrlicht:./lib/linux/fmod:./CLEngine/lib/linux/assimp"
                }
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Habilitar la impresión con sangría para gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "(gdb) Server Iniciar",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/UDPServer/Server",
            "args": [3],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Habilitar la impresión con sangría para gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },

        {
            "name": "CLEngine",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/CLEngine/CLEngine",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "LD_LIBRARY_PATH",
                    "value": "./lib/linux/irrlicht:./lib/linux/fmod:./CLEngine/lib/linux/assimp"
                }
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Habilitar la impresión con sangría para gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}